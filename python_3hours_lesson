query_answer = {"哥哥的性别":"男",
              "哥哥的英文名":"peisenxu",
              "哥哥的女朋友":"AlisonMoca",
                "哥哥的职业":"前台端菜",
                "哥哥的小宝宝":"芭比，小爱心，Moca"}
query = input("请输入想要查询的有关哥哥的问题：")
if query in query_answer:
    print("您查询的 "+ query + " 答案为：")
    print(query_answer[query])
else:
    print("您查询的问题暂未收录。")
    print("当前本查询系统收录问答对数为" + str(len(query_answer)))
print()

total = 0
count = 0
user_input = input("请输入任意数字（完成数字输入后，请输入q终止程序）：")
while user_input != "q":
    number = float(user_input)
    total += number
    count += 1
    user_input = input("请输入任意数字（完成数字输入后，请输入q终止程序）：")
if count == 0:
    result = 0
else:
    result = total/count
print("您输入的数字平均值为" + str(result))
print()

class Student:
    def __init__(self, name, student_id):
        self.name = name
        self.student_id = student_id
        self.grades = {"语文":0,"数学":0,"英语":0}

    def set_grade(self, course, grade):
        if course in self.grades:
            self.grades[course] = grade

    def print_grade(self):
        print(f"学生{self.name}(学号：{self.student_id})的成绩为：")
        for course in self.grades:
            print(f"{course}: {self.grades[course]}分")

peisenxu = Student("Peisenxu", "520")
peisenxu.set_grade("语文",100)
peisenxu.set_grade("数学",100)
peisenxu.set_grade("英语",100)
peisenxu.print_grade()
print()

class Employee:
    def __init__(self, name, id):
        self.name = name
        self.id = id

    def print_info(self):
        print(f"员工名字：{self.name},工号：{self.id}")

class FullTimeEmployee(Employee):
    def __init__(self, name, id, monthly_salary):
        super().__init__(name, id)
        self.monthly_salary = monthly_salary

    def calculate_monthly_pay(self):
        return self.monthly_salary

class PartTimeEmployee(Employee):
    def __init__(self, name, id, daily_salary, work_days):
        super().__init__(name, id)
        self.daily_salary = daily_salary
        self.work_days = work_days

    def calculate_monthly_pay(self):
        return self.daily_salary * self.work_days

peisenxu = FullTimeEmployee("Peisenxu", "520", 52000)
AlisonMoca = PartTimeEmployee("AlisonMoca", "521", 520, 5.2)
peisenxu.print_info()
AlisonMoca.print_info()
print(peisenxu.calculate_monthly_pay())
print(AlisonMoca.calculate_monthly_pay())
print() 
