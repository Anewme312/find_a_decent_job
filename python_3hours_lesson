# BMI = 体重/(身高**2）
user_weight = float(input("请输入您的体重（单位：kg）："))
user_height = float(input("请输入您的身高（单位：m）："))
user_BMI = user_weight/(user_height)**2
print("您的BMI值为：" + str(user_BMI))
if user_BMI < 18.5:
    print("您属于偏瘦")
elif 18.5 <= user_BMI < 25:
    print("您属于正常")
elif 25 <= user_BMI < 30:
    print("您属于偏胖")
else:
    print("您属于肥胖")
print()

def calcutale_BMI(weight, height):
    BMI = weight / (height * height)
    if BMI < 18.5:
        category = "偏瘦"
    elif 18.5 <= BMI < 25:
        category = "正常"
    elif 25 <= BMI < 30:
        category = "偏胖"
    else:
        category = "肥胖"
    print(f"您的BMI分类为：{category}")
    return BMI

result = calcutale_BMI(45, 1.52)
print(result)
print()

